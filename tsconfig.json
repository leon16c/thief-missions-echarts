{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "sourceMap": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmitOnError": true,
        "lib": [
            "es2015",
            "dom"
        ],
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules", "missions.json"
    ]
}